<!DOCTYPE html>
<html>

<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <link rel="shortcut icon" href="./images/icons8-question-96.png" type="image/x-icon" />
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Archivo:ital,wght@0,100..900;1,100..900&family=Roboto+Condensed:ital,wght@0,100..900;1,100..900&display=swap" rel="stylesheet">

  <link rel="stylesheet" href="./css/reset.css" />
  <link rel="stylesheet" href="./css/stats.css" />
  <title>Stats</title>
  <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
</head>

<body>
  <h1 class="titleText">Triva Stats</h1>
  <div class="chart-container">
    <canvas id="myChart"></canvas>
  </div>

  <a href="/"><button style="margin-top: 2em">Play Again</button></a>
  <script>
    var ctx = document.getElementById('myChart').getContext('2d');
    var data = <%- JSON.stringify(count) %>;
    var labels = Object.keys(data);
    var correctValues = labels.map(label => data[label].correct);
    var totalValues = labels.map(label => data[label].total);

    labels = labels.map(label => label.replace(/_/g, ' ').replace(/\b\w/g, l => l.toUpperCase()));

    var myBarChart = new Chart(ctx, {
      type: 'bar',
      data: {
        labels: labels,
        datasets: [{
          label: 'Correct',
          data: correctValues,
          backgroundColor: 'rgba(255,196,0, 0.9)',
          borderColor: 'rgba(0,0,0, 1)',
          borderWidth: 0
        }, {
          label: 'Total',
          data: totalValues,
          backgroundColor: 'rgba(0, 0, 0, .9)',
          borderColor: 'rgba(255,196,0, 1)',
          borderWidth: 0
        }]
      },
      options: {
        responsive: true, // corrected typo here
        maintainAspectRatio: false,
        scales: {
          y: {
            beginAtZero: true,
            ticks: {
              color: 'black',
              font: {
                size: 16,
                family: 'Roboto Condensed' // corrected property names here
              }
            }
          },
          x: {
            ticks: {
              color: 'black',
              font: {
                size: 16,
                family: 'Roboto Condensed' // corrected property names here
              }
            }
          }
        }
      }
    });
  </script>
</body>

</html>